<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @survey.title %>
</p>

<p>
  <strong>Created at:</strong>
  <%= @survey.created_at %>
</p>

<p>
  <strong>Updated at:</strong>
  <%= @survey.updated_at %>
</p>

<h2>Questions</h2>
<% @survey.questions.each do |question| %>
  <p>
    <strong><%= question.order %>. Type:</strong>
    <%= collection_select(:question, :qtype, QuestionType.all, :questiontype, :questiontype, :selected => question.qtype) %>
  </p>
 
  <p>
    <strong>Title:</strong>
    <%= question.title %></br>
    <%= question.desc %>
  </p>
  <p>
<% if question.qtype == 'multiple' %>
<% question.definition.each do |t| %>
<%= check_box_tag(:multiple) %>
<%= label_tag(:multiple, t) %></br>
<% end %>
<% end %>
<% if question.qtype == 'radio' %>
<% question.definition.each do |t| %>
<%= radio_button_tag(:radio, 'bla') %>
<%= label_tag(:radio, t) %></br>
<% end %>
<% end %>
</p>
 <% end %>

<%= link_to 'Edit', edit_survey_path(@survey) %> | <%= link_to 'View Questions', survey_questions_path(@survey) %> |
<%= link_to 'Back', surveys_path %>
