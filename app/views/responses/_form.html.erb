<%= form_for [@survey, @response] , :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :ip, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ip, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :survey_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :survey_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Submit', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', survey_responses_path(params[:survey_id]), :class => 'btn' %> 
  </div>
<% end %>
